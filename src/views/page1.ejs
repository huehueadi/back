<html>
<head>
<title><%= pageTitle %></title>
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
<style>
      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
      }
      .fade-in {
        animation: fadeIn 2s ease-in-out;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .slide-in {
        animation: slideIn 1.5s ease-in-out;
      }
      @keyframes slideIn {
        from { transform: translateX(-100%); }
        to { transform: translateX(0); }
      }
      .bounce-in {
        animation: bounceIn 1.5s ease-in-out;
      }
      @keyframes bounceIn {
        0% { transform: scale(0.5); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
      }
</style>
</head>
<body>
<div class="container mx-auto p-8">
<% content.forEach((contentItem) => { %>
<% if (contentItem.type === 'text') { %>
<section class="text-section fade-in mb-12">
<h2 class="text-4xl font-bold mb-4"><%= contentItem.data.heading %></h2>
<p class="text-lg"><%= contentItem.data.description %></p>
</section>
<% } else if (contentItem.type === 'image') { %>
<section class="image-section slide-in mb-12">
<img src="<%= contentItem.data.imageUrl %>" alt="<%= contentItem.data.imageDescription %>" class="rounded shadow-lg" />
</section>
<% } else if (contentItem.type === 'link') { %>
<section class="link-section bounce-in mb-12">
<a href="<%= contentItem.data.linkUrl %>" class="bg-purple-700 hover:bg-purple-600 text-white p-4 rounded shadow-lg text-center">
<%= contentItem.data.linkDescription %>
</a>
</section>
<% } else if (contentItem.type === 'video') { %>
<section class="video-section fade-in mb-12">
<iframe src="<%= contentItem.data.videoUrl %>" class="w-full h-64 rounded shadow-lg" title="<%= contentItem.data.videoDescription %>"></iframe>
</section>
<% } else if (contentItem.type === 'contactForm') { %>
<section class="contact-form-section slide-in mb-12">
<form class="bg-white p-8 rounded shadow-lg text-gray-800">
<% contentItem.data.formFields.forEach((field) => { %>
<div class="mb-4">
<label for="<%= field.name %>" class="block text-sm font-bold mb-2"><%= field.label %></label>
<input 
                    id="<%= field.name %>"
                    type="<%= field.fieldType %>" 
                    name="<%= field.name %>" 
                    placeholder="<%= field.placeholder %>" 
                    class="w-full p-2 border border-gray-300 rounded"
<% if (field.required) { %> required <% } %>
                  />
</div>
<% }) %>
<button type="submit" class="bg-purple-800 text-white px-4 py-2 rounded hover:bg-purple-700">Submit</button>
</form>
</section>
<% } %>
<% }) %>
</div>
</body>
</html>

